

<%- include('../headerU') %>


<div class="container-xxl bg-white p-0">
    <!-- Formulaire de mise à jour de la réservation -->
    <div class="container-xxl py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card shadow-lg" style="border-radius: 20px; width: 700px; height: 600px;"> 
                        <div class="card-body">
                            <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                                <h6 class="section-title text-center text-uppercase" style="color: white;">LOGIN</h6>
                                <h3 class="mb-5" >
                                    <span class="text-primary text-uppercase" style="display: block;">Update Reservation</span>
                                </h3>
                            </div>
                            <form action="/reservation/updatereservations/<%= reservation._id %>" method="post">
                                <div class="mb-3">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" id="date" name="date" placeholder="Booking date" value="<%= formattedDate(reservation.date) %>" required>
                                        <label for="date">Booking date</label>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <div class="form-floating">
                                        <input type="time" class="form-control" id="heureDebut" name="heureDebut" placeholder="Start Time" value="<%= reservation.heureDebut %>" required>
                                        <label for="heureDebut">Start Time</label>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <div class="form-floating">
                                        <input type="time" class="form-control" id="heureFin" name="heureFin" placeholder="End Time " value="<%= reservation.heureFin %>" required>
                                        <label for="heureFin">End Time </label>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <div class="form-floating">
                                        <textarea class="form-control" id="description" name="description" placeholder="Description" rows="5" value ="<%= reservation.description %>" required></textarea>
                                        <label for="description">Description</label>
                                    </div>
                                </div>
                                <div class="d-grid">
                                    <button class="btn btn-primary btn-block" type="submit">Update Rservation</button>
                                </div>
                            </form>
                            <div class="d-grid">
                                <button class="btn btn-primary btn-block" style="margin-top: 10px;background-color: rgb(255, 255, 255); color:#86B817 ;" onclick="window.location.href='/reservation/myReservation';">Go back to List</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Formulaire de mise à jour de la réservation -->
    <!-- Retour en haut -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
</div>
<% function formattedDate(dateString) {
    const date = new Date(dateString);
    const formattedDate = ("0" + date.getDate()).slice(-2) + "/" + ("0" + (date.getMonth() + 1)).slice(-2) + "/" + date.getFullYear();
    return formattedDate;
} %>
