


  




<%- include('../headerU') %>


<!-- JavaScript Libraries -->
<div class="container-xxl bg-white p-0">
    <!-- Contact Start -->
    <div class="container-xxl py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card shadow-lg" style="border-radius: 20px; width: 700px; height: 600px;"> 
                        <div class="card-body">
                            <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                                <h6 class="section-title text-center text-uppercase" style="color: white;">LOGIN</h6>
                                <h3 class="mb-5" >
                                    <span class="text-primary text-uppercase" style="display: block;">Upfate Room</span>
                                </h3>
                                                           </div>
                                                           <form action="/room/Updaterooms/<%= room._id %>" method="POST" enctype="multipart/form-data">
                                                            <div class="mb-3">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" id="nom" name="nom" placeholder="Room name"    pattern=".{5,}" title="first name must be at least 5 characters long" value="<%= room.nom %>"  required>
                                        <label for="nom">Room name</label>
                                    </div>
                                </div>
                            


                                <div class="mb-3">
                                    <div class="form-floating">
                                        <input type="number" class="form-control" id="capacite" name="capacite" placeholder="Capacity"   value="<%= room.capacite %>"   required>
                                        <label for="capacite">Capacity</label>
                                    </div>
                                </div>




                                <div class="mb-3">
                                    <div class="form-floating">
                                        <input    type="text" class="form-control" id="localisation" name="localisation" placeholder="Localistaion"  pattern=".{5,}" title="last name must be at least 5 characters long" value="<%= room.localisation %>"  required>
                                        <label for="localisation">Localisation</label>
                                    </div>
                                </div>
                                <div class="mb-3">
                                  <div class="form-floating">
                                      <input    type="text" class="form-control" id="description" name="description" placeholder="Description"  pattern=".{5,}" title="last name must be at least 5 characters long" value="<%= room.description %>"  required>
                                      <label for="description">Description</label>
                                  </div>
                              </div>


                                <div class="mb-3">
                                    <div class="form-floating">
                                        <input type="file" class="form-control" id="image" name="image" placeholder="Image"     value="<%= room.image %>" required>
                                        <label for="image">Image</label>
                                    </div>
                                </div>


                               
                                
                                <div class="d-grid">
                                    <button class="btn btn-primary btn-block" type="submit">Update Room</button>
                                </div>
                     
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Contact End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
</div>

<!-- JavaScript Libraries -->
<%- include('../footer') %>